<!-- Using Layouts in ejs to avoid use of the same code -->

<!-- importing header file using include keyword -->
<%- include('header') -%>

    <!-- for heading -->
    <div class="box" id="heading">
        <!-- this is how we get dynamic values in ejs from server using <% %> -->
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
            <% for(var i=0; i < newToDoItem.length;i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newToDoItem[i] %></p>
            </div>
            <% } %>

            <form class="item" action="/" method="POST">
                <input type="text" name="todoItem" placeholder="Add New Item Here...">
                <button type="submit" name="button" value="<%= buttonValue %>">+</button>
            </form>
    </div>

<!-- importing footer file using include keyword -->
<%- include('footer') -%>